# Startup decision: Using DB_URL instead of DATABASE_URL for internal consistency
# Both are accepted - DB_URL is the primary variable used throughout the codebase
# Container-specific variables (NODE_ENV, DB_URL) are defined in docker-compose.yml

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug
LOG_FILE=server.log

# Database (one of DATABASE_URL or DB_URL required)
# DB_URL=postgresql://user:pass@host:5432/dbname
# DATABASE_URL=postgresql://user:pass@host:5432/dbname

# Better Auth (required)
BETTER_AUTH_SECRET=your-32-char-minimum-secret-for-signing
BETTER_AUTH_URL=http://localhost:3000

# Trusted origins (comma-separated, required in production for CSRF protection)
# TRUSTED_ORIGINS=https://your-frontend.com,https://another-origin.com

# Initial user seed (required only when DB has no users; omit or leave empty after first user exists)
# SEED_USER_EMAIL=admin@example.com
# SEED_USER_PASSWORD=secure-password
# SEED_USER_NAME=Admin

# Google OAuth (optional; both must be set to enable Google sign-in)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Email (Resend) - required for password reset
RESEND_API_KEY=re_xxxxxxxxxxxx
# EMAIL_FROM=noreply@yourdomain.com
